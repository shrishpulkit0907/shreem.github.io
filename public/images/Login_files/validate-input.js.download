$('input').on('change blur', function() {
    validateField($(this),loginFormRules);
});

 // Function to validate a single input field
 function validateField(input,rules) {
    $.each(rules, function(fieldName, rule) {
        var $field = input.attr('name');
        var value = input.val();
        alert("#X=>"+value+"<=#X");
        if (rule.required && !value) {
            $field.after('<div class="error-message invalid-feedback d-block">' + rule.message + '</div>');
            return false;
        }
    });
    return true;
}

// Function to display error message for input field
function showErrorMessage(input, message) {
    alert("#");
    var errorElement = input.next('.error-message');
    if (!errorElement.length) {
        errorElement = $('<div class="error-message invalid-feedback"></div>');
        input.after(errorElement);
    }
    errorElement.text(message);
}

// Function to hide error message for input field
function hideErrorMessage(input) {
    input.next('.error-message').remove();
}

